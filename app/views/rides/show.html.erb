<p id="notice"><%= notice %></p>

<p>
  <strong>Driver:</strong>
  <%= @ride.user.name %>
</p>

<p>
  <strong>Seats:</strong>
  <%= @ride.seats %>
</p>

<p>
  <strong>Destination:</strong>
  <%= @ride.destination %>
</p>

<p>
  <strong>Pickup:</strong>
  <%= @ride.pickup %>
</p>

<p>
  <strong>Departure:</strong>
  <%= @ride.departure %>
</p>

<p>
  <strong>Arrival:</strong>
  <%= @ride.arrival %>
</p>

<br />
<% if @ride.users.count > 0 %>
  <h2>Riders</h2>
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @ride.users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

<br />
<% if user_signed_in? and @ride.user == current_user %>
  <%= link_to 'Edit', edit_ride_path(@ride) %> |
<% end %>
<%= link_to 'Back to Rides', rides_path %>
